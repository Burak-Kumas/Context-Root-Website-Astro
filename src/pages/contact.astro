---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  title="Contact Us"
  scrollText="Don't hesitate to contact us. "
  description=""
  image="https://framerusercontent.com/images/NxUpEWsZDVAPHkgwLwsQVNDaw.jpg">
  <div class="relative pt-12 mx-auto flex justify-center">
    <div class="w-4/5">
      <div class="w-full">
        <div class="text-center py-20">
          <p class="uppercase">Context Root</p>
          <h3>Contact Us</h3>
        </div>
        <div class="flex gap-10">
          <div class="w-2/3">
            <form action="post w-full">
              <div>
                <div class="flex gap-5">
                  <div class="w-1/2">
                    <label class="block uppercase tracking-wide text-xs font-bold mb-2" for="name"> Name </label>
                    <input
                      class="appearance-none block w-full bg-transparent border border-primary-300 dark:border-light rounded py-3 px-4 mb-3 leading-tight focus:outline-none"
                      id="name"
                      type="text"
                      placeholder="Jane"
                    />
                  </div>
                  <div class="w-1/2">
                    <label class="block uppercase tracking-wide text-xs font-bold mb-2" for="phone"> Phone </label>
                    <input
                      class="appearance-none block w-full bg-transparent border border-primary-300 dark:border-light rounded py-3 px-4 mb-3 leading-tight focus:outline-none"
                      id="phone"
                      type="tel"
                      placeholder="Phone Number"
                    />
                  </div>
                </div>
                <div class="w-full">
                  <label for="message" class="block uppercase tracking-wide text-xs font-bold mb-2">Message</label>
                  <textarea
                    class="appearance-none block w-full bg-transparent border border-primary-300 dark:border-light rounded py-3 px-4 mb-3 leading-tight focus:outline-none"
                    rows="10"
                    name="text-area"
                    id="message"></textarea>
                </div>
              </div>
              <button class="uppercase bg-primary-400 w-full rounded py-3 font-bold border border-primary-500"
                >Submit</button
              >
            </form>
          </div>

          <div class="w-1/3">
            <h5 class="font-semibold text-primary-800">Get in touch We’re always here to help.</h5>
            <p>Contact us if you have any requests.</p>
            <h5 class="font-semibold text-primary-800">Address</h5>
            <p>Mustafa Kemal Avenue 2143. Street No:10/6 Cankaya - Ankara / Türkiye</p>
            <br />
            <br />
            <p>info@contextroot.com</p>
            <p>+90 534 301 20 16</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
