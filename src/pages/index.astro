---
import videoBG from "../assets/video/video.mp4";
import MainLayout from "../layouts/MainLayout.astro";
import Image1 from "../assets/images/1.webp";
import Image2 from "../assets/images/2.webp";
import Image3 from "../assets/images/3.webp";
import logoDark from "../assets/images/logo-dark.svg";
import Hero from "../components/ui/Hero.astro";
---

<MainLayout title="Home">
  <!-- Hero -->
<Hero/>

  <!-- Video&Stats -->
  <div class="w-95 h-3200 relative mx-auto mt-20 flex">
    <!--Video-->
    <div class="w-full sticky md:sticky lg:sticky h-[900px] top-7">
      <video class="sm:h-[500px] md:h-[700px] lg:h-[900px] h-full w-full object-cover rounded-3xl" src={videoBG}
      ></video>
    </div>
    <!--Stats 1-->
    <div class="absolute top-[40px] left-[35px]">
      <h2 class="sm:text-6xl md:text-7xl lg:text-100 text-light">350+</h2>
      <p class="sm:text-2xl md:text-3xl text-light">Projects Completed</p>
    </div>
    <!--Stats 2-->
    <div class="absolute top-[600px] right-[35px]">
      <h2 class="sm:text-6xl md:text-7xl lg:text-100 text-light">320+</h2>
      <p class="sm:text-2xl md:text-3xl lg:text-3xl text-light">Happy Clients</p>
    </div>
    <!--Stats 3-->
    <div class="absolute top-[1280px] left-[35px]">
      <h2 class="sm:text-6xl md:text-7xl lg:text-100 text-light">14 Years</h2>
      <p class="sm:text-2xl md:text-3xl text-light">of Experience</p>
    </div>
    <!--Stats 4-->
    <div class="absolute top-[1920px] right-[35px]">
      <h2 class="sm:text-6xl md:text-7xl lg:text-100 text-light">%99,6</h2>
      <p class="sm:text-2xl md:text-3xl text-light">Positive Feedback</p>
    </div>
  </div>
  <!-- Services -->
  <div class="relative w-full pt-12">
    <div class="w-95 mx-auto">
      <div class="flex justify-between">
        <div>
          <p>Services</p>
          <h2>Our Services</h2>
        </div>
        <div class="content-center justify-end">
          <button class="rounded-full border-light border-[1px] py-2 px-4 md:px-12 md:py-4">View All Services</button>
        </div>
      </div>
      <div class="flex flex-col md:flex-row pt-14 gap-5">
        <h3 class="w-full md:w-40 text-40">Web and Digital<br />Experience Design</h3>
        <div class="w-full md:w-60">
          <h3 class="text-30 md:text-40">
            Specialized website and digital user experience solutions for crafting intuitive, audience focused
            interfaces that boost interaction and fulfill your online objectives.
          </h3>
          <div class="flex flex-col md:flex-row lg:flex-row gap-3 pt-6">
            <p class="sm:w-full md:w-1/2">
              At our esteemed web development company, trust is paramount and we earn it through unwavering excellence
              and professionalism in every endeavor.
            </p>
            <p class="sm:w-full md:w-1/2">
              Our dedicated team specializes in delivering refined digital experiences, meticulously tailored to meet
              your unique requirements.
            </p>
          </div>
          <div class="pt-10">
            <ol class="list-decimal list-inside w-full md:w-1/2 text-20 space-y-5">
              <li>Web Design & Development</li>
              <hr />
              <li>User Interface - User Experience Design (UI - UX)</li>
              <hr />
              <li>Front-End Development</li>
              <hr />
              <li>Back-End Development</li>
              <hr />
              <li>Search Engine Optimization (SEO)</li>
              <hr />
              <li>Mobile Application</li>
              <hr />
              <li>E-commerce Solutions</li>
              <hr />
              <li>Brand Identity</li>
              <hr />
              <li>Copywriting</li>
              <hr />
            </ol>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--About Us-->
  <div class="relative w-full py-12">
    <div class="w-95 mx-auto">
      <div class="flex justify-between"></div>
      <div class="flex flex-col md:flex-row gap-5">
        <h3 class="w-full md:w-40 text-40">About Us</h3>
        <div class="w-full md:w-60">
          <div class="w-full">
            <h3>
              At Context Root, we endeavor to surpass expectations by creating outstanding digital encounters on diverse
              platforms.
            </h3>
            <div class="flex flex-col md:flex-row lg:flex-row gap-3 pt-6">
              <div class="sm:w-full md:w-1/2">
                <p class="mb-10">
                  Dedicated to excelling in the realm of digital creation, Context Root is unwavering in their mission
                  to deliver standout experiences across all devices without faltering in their dedication.
                </p>
                <img class="h-[780px] w-full object-cover rounded-3xl" src={Image1.src} alt="görsel-1" />
              </div>
              <div class="sm:w-full md:w-1/2">
                <p class="mb-10">
                  Our tenacious goal is to outdo expectations and set unprecedented standards of excellence in every
                  venture we undertake.
                  
                </p>
                <br>
                <img class="h-96 w-full object-cover rounded-3xl mb-3" src={Image2.src} alt="" />
                <img class="h-96 w-full object-cover rounded-3xl" src={Image3.src} alt="" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--Footer-->
  <div>
    <div>
      <div class="w-95 mx-auto flex justify-between py-12">
        <div>
          <img src={logoDark.src} alt="context root logo" />
        </div>
        <div>
          <h6 class="font-semibold text-20">Services</h6>
          <ul>
            <li>Web Design</li>
            <li>Web Development</li>
            <li>Mobile Application</li>
            <li>SEO</li>
          </ul>
        </div>
        <div>
          <h6 class="font-semibold text-20">Company</h6>
          <ul>
            <li>About Us</li>
            <li>Our Team</li>
            <li>Projects</li>
            <li>Careers</li>
          </ul>
        </div>
        <div>
          <h6 class="font-semibold text-20">Legal</h6>
          <ul>
            <li>Privacy Policy</li>
            <li>Terms & Conditions</li>
            <li>Cookie Policy</li>
          </ul>
        </div>
        <div>
          <h6 class="font-semibold text-20">Contact</h6>
          <ul>
            <li>[email protected]</li>
            <li>+1 234 567 89 00</li>
            <li>1234 Street Name, City Name</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="w-95 mx-auto py-6 text-center">
      <p>© 2024 Context Root. All rights reserved.</p>
    </div>
  </div>
</MainLayout>
